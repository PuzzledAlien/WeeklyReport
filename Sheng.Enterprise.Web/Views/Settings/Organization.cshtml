@model Sheng.Enterprise.Web.Models.OrganizationViewModel

@{
    ViewBag.Title = "组织信息";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.LeftTitle = "设 置";
    ViewBag.MainMenu = "Settings";
    ViewBag.LeftMenu = "Organization";
}

<script type="text/javascript">

    $(document).ready(function ()
    {
        $("[keyenter]").keypress(function (e)
        {
            if (e.keyCode == 13)
            {
                save();
            }
        });
    });

    function save()
    {
        $("#btnSave").attr("disabled", "disabled");

        if ($("#form").validate({
            rules: {
                     "Domain.Name": "required"
        },
            messages: {
                     "Domain.Name": "!"
        }
        }).form() == false)
        {
            $("#btnSave").removeAttr("disabled");
            return;
        }

        //提交表单
        showMask();
        var layerIndex = layer.load(0, {
            shade: false
        });

        var domain = new Object();

        domain.Name = $("#txtName").val();
        domain.ContactPerson = $("#txtContactPerson").val();
        domain.Email = $("#txtEmail").val();
        domain.Telphone = $("#txtTelphone").val();

        $.ajax({
            url: "/Api/Domain/UpdateDomain",
            type: "POST",
            dataType: "json",
            data: JSON.stringify(domain),
            success: function (data, status, jqXHR)
            {
                layer.closeAll();
                hideMask();

                $("#btnSave").removeAttr("disabled");

                layer.msg("机构基本信息更新成功。", {
                    time: 1000
                });

            },
            error: function (xmlHttpRequest)
            {
                layer.closeAll();
                hideMask();

                $("#btnSave").removeAttr("disabled");

                alert("Error: " + xmlHttpRequest.status);
            }
        });
    }
</script>

